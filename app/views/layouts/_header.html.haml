.navbar-default
  / Brand and toggle get grouped for better mobile display
  .navbar-header.page-scroll
    %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand{ href: categories_path } Categories
  / Collect the nav links, forms, and other content for toggling
  #bs-example-navbar-collapse-1.collapse.navbar-collapse
    %ul.nav.navbar-nav.navbar-left
      %li.page-scroll
        =link_to "Events", events_path
      %li.page-scroll
        =link_to "Groups", groups_path
      %li.page-scroll
        =link_to "Map", map_path
    %ul.nav.navbar-nav.navbar-right
      %li.hidden
        %a{:href => "#page-top"}
      %li.page-scroll
        = link_to invitations_path do
          %span.glyphicon.glyphicon-bell{"aria-hidden" => "true"}
      - if current_user.location
        %li.page-scroll
          %p.location= current_user.location
      %li.page-scroll
        .dropdown
          %img{ src: current_user.image, :class => "dropdown-toggle", "data-toggle" => "dropdown", "id" => "dropdownMenu1", "aria-expanded" => "true"}
            %span.caret
          %ul.dropdown-menu{"role" => "menu", "aria-labelledby" => "dropdownMenu1"}
            %li{"role" => "presentation"}
              %a{"role" => "menuitem", "tabindex" => "-1", "href" =>"profile"} Profile
            %li{"role" => "presentation"}
              %a{"role" => "menuitem", "tabindex" => "-1", "href" =>"#{signout_path}"} Log out
