.row
  .col-lg-1
  .col-lg-10
    %p#notice= notice
    
    %h1
      = event.title 
    %p
      %b
        = event.time.to_formatted_s(:long)
          
    .row
      .col-lg-4  
        %img{:src => event.photo.url(:medium)}
      .col-lg-3.alert.alert-info
        %p
          %b Description:
          %br
          = event.description
        %p
          %b Category:
          %br
          = event.category.name          
      .col-lg-3          
      
    %p
      %b Location:
      = event.location
    .row
      .col-lg-2  
      .col-lg-8.alert.alert-info 
        %b Event created by:
        = event.user.name 
      .col-lg-2           
    = link_to 'Edit', edit_event_path(event), :class => "btn btn-info"
    = link_to 'Back', events_path, :class => "btn btn-danger"
  .col-lg-1